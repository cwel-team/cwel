    | iPhone 8 Plus - s     | s          | --dc.browserName iPhone  --dc.device "iPhone 8 Plus"             --dc.platform MAC       --dc.emulator true |
    | iPhone 5 - xs         | xs         | --dc.browserName iPhone  --dc.device "iPhone 5"                  --dc.platform MAC       --dc.emulator true |
    | iPad Pro - l          | l          | --dc.browserName iPad    --dc.device "iPad Pro"                  --dc.platform MAC       --dc.emulator true |
    | iPad 5 - m            | m          | --dc.browserName iPad    --dc.device "iPad 5th"                  --dc.platform MAC       --dc.emulator true |
    | Samsung S8 - xs       | xs         | --dc.browserName android --dc.device "Samsung Galaxy S8"         --dc.real_mobile true |
    | Galaxy Tab 4 10.1 - m | m          | --dc.browserName android --dc.device "Samsung Galaxy Tab 4 10.1" --dc.platform ANDROID |

@@ set
    specPath           Test/Visual/Specs
    gridArgsForAll     --dc.browserstack.local true --dc.browserstack.debug true --dc.build "${build_name}"

@@ parameterized using devices
Grid on: ${deviceName}
    selenium grid ${grid_url} --page ${host_url}/prototype/grid ${gridArgs} ${gridArgsForAll}
        check ${specPath}/Grid.gspec --include '${tags}'

@@ parameterized using devices
Rem units on: ${deviceName}
    selenium grid ${grid_url} --page ${host_url}/prototype/remunits ${gridArgs} ${gridArgsForAll}
        check ${specPath}/Remunits.gspec --include '${tags}'
