# http://galenframework.com/docs/reference-galen-spec-language-guide/#Objectdefinition

@objects

    spacers                                     .spacers
        spacer_xxs                              .spacer--xxs
        spacer_xs                               .spacer--xs
        spacer_s                                .spacer--s
        spacer_m                                .spacer--m
        spacer_l                                .spacer--l
        spacer_xl                               .spacer--xl


# http://galenframework.com/docs/reference-galen-spec-language-guide/#SpecsReference

= Spacers =

    @on xs
        spacers.spacer_xxs:
            css width is "3.5px"

        spacers.spacer_xs:
            css width is "7px"

        spacers.spacer_s:
            css width is "14px"

        spacers.spacer_m:
            css width is "28px"

        spacers.spacer_l:
            css width is "56px"

        spacers.spacer_xl:
            css width is "112px"

    @on s, m, l
        spacers.spacer_xxs:
            css width is "4px"

        spacers.spacer_xs:
            css width is "8px"

        spacers.spacer_s:
            css width is "16px"

        spacers.spacer_m:
            css width is "32px"

        spacers.spacer_l:
            css width is "64px"

        spacers.spacer_xl:
            css width is "128px"

    @on xl
        spacers.spacer_xxs:
            css width is "4.5px"

        spacers.spacer_xs:
            css width is "9px"

        spacers.spacer_s:
            css width is "18px"

        spacers.spacer_m:
            css width is "36px"

        spacers.spacer_l:
            css width is "72px"

        spacers.spacer_xl:
            css width is "144px"
