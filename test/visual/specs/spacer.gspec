# http://galenframework.com/docs/reference-galen-spec-language-guide/#Objectdefinition

@objects

    spacers                                     .spacers
        spacer_xxs                              .spacer--xxs
        spacer_xs                               .spacer--xs
        spacer_s                                .spacer--s
        spacer_m                                .spacer--m
        spacer_l                                .spacer--l
        spacer_xl                               .spacer--xl


# http://galenframework.com/docs/reference-galen-spec-language-guide/#SpecsReference

= Spacers =

    @on xs
        spacers.spacer_xxs:
            width ~ "3.5px"

        spacers.spacer_xs:
            width ~ "7px"

        spacers.spacer_s:
            width ~ "14px"

        spacers.spacer_m:
            width ~ "28px"

        spacers.spacer_l:
            width ~ "56px"

        spacers.spacer_xl:
            width ~ "112px"

    @on s, m, l
        spacers.spacer_xxs:
            width ~ "4px"

        spacers.spacer_xs:
            width ~ "8px"

        spacers.spacer_s:
            width ~ "16px"

        spacers.spacer_m:
            width ~ "32px"

        spacers.spacer_l:
            width ~ "64px"

        spacers.spacer_xl:
            width ~ "128px"

    @on xl
        spacers.spacer_xxs:
            width ~ "4.5px"

        spacers.spacer_xs:
            width ~ "9px"

        spacers.spacer_s:
            width ~ "18px"

        spacers.spacer_m:
            width ~ "36px"

        spacers.spacer_l:
            width ~ "72px"

        spacers.spacer_xl:
            width ~ "144px"
