@objects
    
    button_cell_1                               .button-grid__cell:nth-of-type(1) 
        button_primary_*                        .button:not(.button--icon-only)
        button_icon                             .button--icon-only
    button_cell_2                               .button-grid__cell:nth-of-type(2)
        button_secondary_*                      .button:not(.button--icon-only)
        button_icon                             .button--icon-only


    dark                                            .background--dark
