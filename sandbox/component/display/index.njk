{% extends '_layout.njk' %}
{% set title = 'Display' %}

{% from 'cwel/component/display/display.html' import display %}

{% block content %}

    {% set mods = [
            { 
                "modifier_name" : "",
                "animation_name": "no-animation" 
            }, 
            { 
                "modifier_name" : "display--center",
                "animation_name": "no-animation" 
            },
            { 
                "modifier_name" : "display--image",
                "animation_name": "no-animation"  
            },
            { 
                "modifier_name" : "display--image display--reverse",
                "animation_name": "no-animation"  
            },
            { 
                "modifier_name" : "display--image",
                "animation_name": "image--right"  
            },
            { 
                "modifier_name" : "display--image display--reverse",
                "animation_name": "image--left" 
            },
            { 
                "modifier_name" : "display--image display--light display--top",
                "animation_name": "no-animation"  
            },
            { 
                "modifier_name" : "display--image display--light display--top display--reverse",
                "animation_name": "no-animation" 
            },
            { 
                "modifier_name" : "display--image display--light display--bottom",
                "animation_name": "no-animation" 
            },
            { 
                "modifier_name" : "display--image display--light display--bottom display--reverse",
                "animation_name": "no-animation" 
            }
        ]
    %}

    {% for mod in mods %}
        {[ display(mod.modifier_name, mod.animation_name) ]}
    {% endfor %}

{% endblock %}
