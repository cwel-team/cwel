{% if item.link.length > 0 %}
<tr>
    <th>
        <h4 class="sd-meta__heading">Links</h4>
    </th>
    <td>
        <ul class="sd-meta__list">
            {% for link in item.link %}
            <li class="sd-meta__list-item">
                <a class="sd-meta__list-link" href="{{ link.url }}">
                    {% if link.caption %}
                        {{ link.caption }}
                    {% else %}
                        {{ link.url }}
                    {% endif %}
                </a>
            </li>
            {% endfor %}
        </ul>
    </td>
</tr>
{% endif %}
