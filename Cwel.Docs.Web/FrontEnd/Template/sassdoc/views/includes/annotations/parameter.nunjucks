{% if item.parameter.length > 0 %}

<tr>
    <td colspan="2">
        <div class="parameter">

            <h4 class="parameter__heading">Parameters</h4>

            <table class="parameter__data">
                <thead>
                    <tr>
                        <th scope="col"><span class="sd-visually-hidden">{{ item.type }} parameter </span>Name</th>
                        <th scope="col"><span class="sd-visually-hidden">{{ item.type }} parameter </span>Description</th>
                        <th scope="col"><span class="sd-visually-hidden">{{ item.type }} parameter </span>Type</th>
                        <th scope="col"><span class="sd-visually-hidden">{{ item.type }} parameter </span>Default value</th>
                    </tr>
                </thead>
                <tbody>
                    {% for parameter in item.parameter %}
                    <tr>
                        <td data-label="name"><code>${{ parameter.name }}</code></td>
                        <td data-label="desc">{{ parameter.description|default('&mdash;<span class="sd-visually-hidden"> none</span>')|safe }}</td>
                        <td data-label="type">
                            <code>
                                {% if parameter.type == '*' %}
                                Any
                                {% else %}
                                {{ parameter.type }}
                                {% endif %}
                            </code>
                        </td>
                        <td data-label="default">
                            {% if not parameter.default %}
                                &mdash;<span class="sd-visually-hidden"> none</span>
                            {% else %}
                                {% if item.type == 'color' %}
                                    <span class="sd-color-preview" style="border-color: {{ item.context.value }};"></span>
                                {% else %}
                                    <code>{{ parameter.default }}</code>
                                {% endif %}
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </td>
</tr>

{% endif %}
