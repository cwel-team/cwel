<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>

    <style>
        body {
            background: #ffffff;
        }
    </style>

    @RenderSection("styles", required: false)
</head>
<body ng-app="sandbox">
    @{ var controller = ViewBag.Controller != "" ? "ng-controller=" + ViewBag.Controller : ""; }
    <main class="container" @controller>
        @RenderBody()
    </main>
    <script src="~/Cwel/cwel-full.js"></script>
    <script>
        angular.module('sandbox', ['cwel']);
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
